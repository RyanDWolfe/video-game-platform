<%= form_for(@game) do |f| %>

<% if @game.errors.any? %>
  <div>
    <h2>There were some errors:</h2>

    <ul>
      <% @game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :genre %><br>
    <%= f.text_field :genre %>
  </div>

  <div>
    <%= f.label :developer_id %><br>
    <%= f.collection_select(:developer_id, @developers, :id, :name) %>
  </div>

  <div>
    <%= f.label :win_parameter %><br>
    <%= f.text_field :win_parameter %>
  </div>

  <div>
    <%= f.label :lose_parameter %><br>
    <%= f.text_field :lose_parameter %>
  </div>

  <div>
    <%= f.submit %>
  </div>

<% end %>
