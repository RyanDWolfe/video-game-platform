<%= form_for @player, :url => url_for(:controller => 'sessions', :action => 'create') do |f| %>

  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>

  <div>
    <%= f.label :password %><br>
    <%= f.text_field :password %>
  </div>

  <div>
    <%= f.submit %>
  </div>

<% end %>
