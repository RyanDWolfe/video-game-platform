<%= form_for @player do |f| %>

<% if @player.errors.any? %>
  <div>
    <h2>There were some errors:</h2>

    <ul>
      <% @player.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>

  <div>
    <%= f.label :password %><br>
    <%= f.text_field :password %>
  </div>

  <div>
    <%= f.submit %>
  </div>

<% end %>
