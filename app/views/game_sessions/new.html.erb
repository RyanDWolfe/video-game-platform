<h1><%= @player.name %> is playing <%= @game.name %></h1>
<h3>To win you need a score of <%= @game.win_parameter %>.</h3>
<h3>You lose if your health reaches <%= @game.lose_parameter %>.</h3>

<p>Submit score and health...</p>

<%= form_for @game_session, url: game_game_sessions_path(player_id: @player.id) do |f| %>

  <% if @game_session.errors.any? %>
    <div>
      <h2>There were some errors:</h2>

      <ul>
        <% @game_session.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div>
    <%= f.label :score %><br>
    <%= f.text_field :score %>
  </div>

  <div>
    <%= f.label :health %><br>
    <%= f.text_field :health %>
  </div>

  <div>
    <%= f.submit %>
  </div>

<% end %>
